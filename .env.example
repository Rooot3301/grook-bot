# Copiez ce fichier en .env et remplacez les valeurs par les vôtres.
DISCORD_TOKEN=VotreTokenDiscordIci
# Clé API VirusTotal (facultatif). Laissez vide pour désactiver la fonction de scan des liens.
VIRUSTOTAL_API_KEY=

# Identifiant de l'application Discord (Client ID) utilisé pour déployer les slash commands.
# Disponible dans le Discord Developer Portal.
CLIENT_ID=

# Identifiant du serveur (Guild ID) pour un déploiement local de commandes.  
# Laisser vide pour déployer les commandes globalement.
GUILD_ID=

# URL du webhook Discord pour les notifications (optionnel)
# Créez un webhook dans votre serveur Discord et collez l'URL ici
WEBHOOK_URL=

# Désactiver les notifications webhook en développement (optionnel)
SKIP_WEBHOOK=false

# Configuration LinkGuardian (analyse des liens)
LINK_GUARDIAN_ENABLED=true
LINK_HEAD_CHECK=true
LINK_RISK_THRESHOLD=3
LINK_REPLY_MODE=reply

# Configuration LLM (Ollama)
LLM_ON_MENTION=false
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1:8b
LLM_MAX_TOKENS=256